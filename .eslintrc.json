{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "no-unused-vars": ["error", { "args": "after-used" }],
    "no-undef": ["error", { "typeof": true }],
    "no-use-before-define": ["error", { "functions": false }],
    "spaced-comment": ["error", "always"]
  }
}
